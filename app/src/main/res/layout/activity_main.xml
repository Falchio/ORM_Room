<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/put1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="putUser1"
        android:text="put User1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:text="put user2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/put2"
        android:onClick="putUser2"
        app:layout_constraintTop_toBottomOf="@+id/put1"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="updateUser"
        android:text="update user"
        android:id="@+id/update"
        app:layout_constraintTop_toBottomOf="@+id/put2"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="getUsers"
        android:text="get users"
        android:id="@+id/get_users"
        app:layout_constraintTop_toBottomOf="@+id/update"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="deleteAllUsers"
        android:text="delete all users"
        android:id="@+id/delete"
        app:layout_constraintTop_toBottomOf="@+id/get_users"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="deleteUser"
        android:id="@+id/delete_user"
        android:text="DELEte user"
        app:layout_constraintTop_toBottomOf="@+id/delete"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>